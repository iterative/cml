FROM dvcorg/dvc-cml-gpu:latest

LABEL maintainer="dvc.org"

RUN apt-get update && \
    apt-get install -y --no-install-recommends --fix-missing \
            python3 \
            python3-pip && \
            python3-setuptools && \
    pip3 install --upgrade pip && \
    update-alternatives --install \
            /usr/bin/python python $(which python3) 10
